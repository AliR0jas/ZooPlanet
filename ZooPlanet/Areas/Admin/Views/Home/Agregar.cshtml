@model ZooPlanet.Models.ViewModels.AnimalesViewModel
@{
    Layout = "_Layout";
}

<h1>Agregar Especies</h1>

<form method="post" action="~/Admin/Home/Agregar">
    <label>Nombre:</label>
    <input required asp-for="Especies.Especie"/>
    <label>Clase:</label>
    <select required asp-for="Especies.IdClase" asp-items="@(new SelectList(Model.Animales, "Id","Nombre"))">
        <option value="">Seleccione una clase</option>
    </select>
    <label>Habitat:</label>
    <input required asp-for="Especies.Habitat"/>
    <label>Peso:</label>
    <input type="number" step="0.1" asp-for="Especies.Peso" />
    <label>Tamaño:</label>
    <input step="0.1" asp-for="Especies.Tamaño"/>
    <label>Observaciones:</label>
    <textarea asp-for="Especies.Observaciones"></textarea>
    <p>@Html.ValidationSummary()</p>
    <input type="submit" value="Agregar" />
    <a href="~/Admin">
        <input type="button" value="Cancelar" />
    </a>
</form>